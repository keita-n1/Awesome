- if !current_page?(coordinate.user)
  %span.like
    - if coordinate.iine?(current_user)
      = form_for(coordinate.likes.find_by(user_id: current_user.id), method: :delete, remote: true) do |f|
        = button_tag(class: "btn btn-default btn-xs") do
          = content_tag :span, "#{coordinate.likes_count}", class: "glyphicon glyphicon-heart"
    - else
      = form_for(coordinate.likes.build, remote: true) do |f|
        %div= hidden_field_tag :coordinate_id, coordinate.id
        = button_tag(class: "btn btn-default btn-xs") do
          = content_tag :span, "#{coordinate.likes_count}", class: "glyphicon glyphicon-heart-empty"
